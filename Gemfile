group :development do
  gem 'rspec-rails'
  gem 'annotate'
  gem 'faker'
  gem 'nifty-generators'
  gem 'annotate'
end

group :test do
  gem 'rspec-rails'
  gem 'webrat'
  gem 'spork'
  gem 'factory_girl_rails'
  gem 'mocha'
end

# Gems used only for assets and not required
# in production environments by default.
